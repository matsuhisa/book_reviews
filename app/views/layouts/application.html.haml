!!!
%html
  %head
    %meta{content: "width=device-width,initial-scale=1", name: "viewport"}
    %title BookReviews
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body

    .global_navi
      .title= link_to 'BookReviews', root_path
      .user
      - if signed_in?
        %span= current_user.login_id
        %span= link_to "sing out", sign_out_path, method: :delete
      - else
        %span= link_to "Googleアカウントでサインイン", "/auth/google_oauth2"

    = yield
