= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :login_id
    = f.text_field :login_id
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :enabled
    = f.number_field :enabled
  .actions
    = f.submit 'Save'
